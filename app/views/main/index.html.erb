<body class="">
  <!-- main header -->
  <div id="page_content">
    <div id="page_content_inner">
      
      <!-- beginning of form -->
      <%= form_tag guides_path, method: :get do %>
        <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-3-5 uk-container-center">

          <div class="uk-grid" data-uk-grid-margin="">
            <div class="uk-width-medium-2-10">
              <img src="http://images.usa-4u.de/Bilder/Shop_Fotos/Nutricia/header/Nutricia_logo.jpg" class="uk-thumbnail"/>
            </div>
            <div class="uk-width-medium-7-10">
              <h4 class="text-muted uk-margin-small-top uk-margin-bottom-remove">Nutricia Corporate</h4> 
              <h1 class="uk-text-muted uk-margin-remove">
                Payor Wizard
              </h1>
            </div>
          </div>

          <br/>

          <div class="md-card">
            <div class="md-card-content">
              
              <!-- search field -->
              <div class="uk-grid" data-uk-grid-margin="">

                <!-- payer state -->
                <div class="uk-width-medium-2-10">
                  <%= select_tag :state, options_for_select(states), id:"product_search_status", class: "data-md-selectize" %>
                </div>
               <!-- end payer state -->


                <!-- payer Name -->
                <div class="uk-width-medium-2-10">
                  <%= select_tag :payer_name, options_for_select(payer_names), class: "data-md-selectize" %>
                </div>
                <!-- end payer Name -->

                <!-- Products -->
                <div class="uk-width-medium-3-10">
                 <%= select_tag :name, options_for_select(products), class: "data-md-selectize" %>
                </div>
                <!-- end Products -->

                <!-- Submit Button -->
                <div class="uk-width-medium-3-10 uk-text-center">
                  <%= submit_tag "Filter Results", class: "md-btn md-btn-block md-btn-primary uk-margin-small-top"%>
                </div>
                <!-- Submit Button -->
              </div>
              <!-- end search field -->

            </div>
          </div>
        </div>
         <%= render 'guides/search' %>
        </div>
        <%= link_to "Upload Reimbursement Data", spreadsheets_path, class: "pull-right" %>

      
    </div>
  </div>

