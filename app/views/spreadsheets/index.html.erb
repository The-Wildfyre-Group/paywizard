              <h3 class="heading_a uk-margin-top uk-text-center">
                Excel Spreadsheet Upload Form
                <span class="sub-heading">
                	Use the form below to upload a new excel spreadsheet.
                <span>
              </h3>
          </div>
          <hr/>
	        <div class="md-card-content uk-padding-top-remove">
	          <!-- search field -->
            <!-- beginning of form -->
					  <%= form_tag import_spreadsheets_path, id: "upload-form", multipart: true, :remote => true , class: "uk-width-medium-8-10 uk-container-center" do %>

							<div class="" id="upload-error-header"></div>

							<!-- add if statement -->
				  		<% (0..15).to_a.each do |i| %>
								<div id="error-<%= i %>"></div>
							<% end %>
							<div class="" id="upload-success" style="display: block"></div>
				  
					 
						  
						  <!-- select state  -->
					  	<p class="uk-text uk-text-primary">1. Select state.</p>
            	<%= select_tag :state, options_for_select([ "California", "Team", "Club", "League" ], "California"), {class: "data-md-selectize", prompt: "Select State", id: "object-field"} %>
	            <br/>
	            <div class="uk-well">
	            	<p class="uk-text uk-text-primary">2. Click to upload MS Excel file.</p>
	            	<%= file_field_tag :file, id: "file-field", type: "file" %>
	          	</div>
		        </div>
		        
		        <hr class="uk-margin-remove"/>
		        <div class="md-card-content">
						  <!-- file submit button -->
						  <p class="uk-margin-small-top uk-margin-large-left uk-margin-large-right">
						  	<%= submit_tag "Import Spreadsheet", class: "md-btn md-btn-block md-btn-primary", disabled: false, id: "file-submit"%>
						  </p>

						<% end %>
					<!-- end of form -->

	        </div>
	      </div>

	    </div>
    </div>
  </div>


